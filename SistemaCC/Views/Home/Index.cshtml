@{
    ViewData["Title"] = "Inicio";
}
    <div class="row">
        <div class="col-md-10 seccion">
            <h1>Tus controles de cambio</h1>
        </div>
        <div class="col-md-2 seccion_boton">
            <a class="btn btn-success fancybox fancybox.ajax" asp-controller="ControlCambio" asp-action="Crear"><span class="icon-plus-square"></span> Crear</a>
        </div>
        <table class="table table-hover">
            <thead class="thead-info">
                <tr>
                    <th>Columna 1</th>
                    <th>Columna 2</th>
                    <th class="link"></th>
                    <th class="link"></th>
                    <th class="link"></th>
                    <th class="link"></th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>Valor 1</td>
                    <td>Valor 2</td>
                    <td class="link">
                        <a href="#">Revisar</a>
                    </td>
                    <td class="link">
                        <a class="fancybox fancybox.ajax" asp-controller="ControlCambio" asp-action="Cerrar">Cerrar</a>
                    </td>
                    <td class="link">
                        <a asp-controller="ControlCambio" asp-action="Ver"><span class="icon-eye"></span></a>
                    </td>
                    <td class="link">
                        <a asp-controller="ControlCambio" asp-action="Editar"><span class="icon-edit"></span></a>
                    </td>
                </tr>
                <tr>
                    <td>Valor 5</td>
                    <td>Valor 1</td>
                    <td>Valor 8</td>
                    <td>Valor 2</td>
                    <td>Valor 2</td>
                    <td>3</td>
