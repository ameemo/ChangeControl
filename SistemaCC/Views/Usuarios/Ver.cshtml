@{
    ViewData["Title"] = "Ver";
    Layout = "./../Shared/_LayoutVacio.cshtml";
}
<div class="seccion-dark">
    <h1>Información de usuario</h1>
</div>
<div id="principal">
    <div class="campos campos_dos_kai">
        <div class="campos_ultimos">
            <label>Nombre completo:</label>
        </div>
        <div class="campos_ultimos">
            <div class="campo-ver p-2">
                @ViewBag.Modelo.Nombre @ViewBag.Modelo.ApPaterno @ViewBag.Modelo.ApMaterno
            </div>
        </div>
    </div>
    <div class="campos campos_dos_kai">
        <div class="campos_ultimos">
            <label>Email:</label>
        </div>
        <div class="campos_ultimos">
            <div class="campo-ver p-2">
                @ViewBag.Modelo.Email
            </div>
        </div>
    </div>
    <div class="campos campos_dos_kai">
        <div class="campos_ultimos">
            <label>Extensión:</label>
        </div>
        <div class="campos_ultimos">
            <div class="campo-ver p-2">
                @if(ViewBag.Modelo.Ext != null)
                {
                    ViewBag.Modelo.Ext
                }
                else
                {
                    <h5>
                        <span class="badge badge-secondary">No Extensión</span>
                    </h5>
                }
            </div>
        </div>
    </div>
    <div class="campos campos_dos">
        <div class="campos_ultimos">
            <label>Roles:</label>
        </div>
        @foreach (var rol in ViewBag.Roles as IEnumerable<SistemaCC.Models.UsuarioRol>)
        {
            <div class="campos_ultimos campo-ver">
                @rol.Roles.Rol
            </div>
        }
    </div>
</div>

