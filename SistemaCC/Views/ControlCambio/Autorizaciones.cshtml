@using SistemaCC.Models
@{
    ViewBag.Title = "Autorizaciones";
    Layout = "./../Shared/_LayoutVacio.cshtml";
}
@if (ViewData["Error"].ToString() != "")
{
    <div class="alert alert-danger mensaje" role="alert">
        @ViewData["Error"]
    </div>
}
else
{
    <div class="seccion-dark col-md-12">
        <h1>Autorizaciones</h1>
    </div>
    <div class="campos campos_dos text-center">
        <div class="campos campos_dos">
            <div class="campos_ultimos">
                <label>Usuario</label>
            </div>
            <div class="campos_ultimos">
                <label>Autorización</label>
            </div>
        </div>
        <div class="campos campos_dos">
            <div class="campos_ultimos">
                <label>¿Falta de realizar la operación?</label>
            </div>
            <div class="campos_ultimos"></div>
        </div>
    </div>
    foreach(var aut in ViewBag.Autorizaciones as IEnumerable<Autorizaciones>)
    {
        Boolean noti = false;
        <div class="campos campos_dos">
            <div class="campos campos_dos">
                <div class="campos_ultimos">
                    @aut.Usuario.Nombre @aut.Usuario.ApePaterno
                </div>
                <div class="campos_ultimos text-center">
                    @if (aut.Autorizado)
                    {
                        <span class="text-success icon-check-square span-aut"></span>
                    }
                    else
                    {
                        <span class="text-danger icon-x-square span-aut"></span>
                    }
                </div>
            </div>
            @foreach (var not in ViewBag.Notificaciones as IEnumerable<Notificaciones>)
            {
                <div class="campos campos_dos">
                    @if (aut.fk_U == not.fk_U && noti == false)
                    {
                        noti = true;
                        <div class="campos_ultimos text-center">
                            Si
                        </div>
                    }
                    else
                    {
                        <div class="campos_ultimos"></div>
                    }
                </div>
            }
        </div>
    }
}