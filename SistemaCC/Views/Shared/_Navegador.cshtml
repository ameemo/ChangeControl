<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <img id="logo-sistema" src="~/wwwroot/images/LogoSistema.svg" />
    <a class="navbar-brand nombre-sistema" href="~/Home/Index">SistemaCC</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
            @if(ViewData["NavRol"].ToString() == "Admin")
            {
                <li class="nav-item">
                    <a class="nav-link" href="~/Monitoreo/Index">Monitoreo</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="~/Usuarios/Index">Usuarios</a>
                </li>
            }
            <li class="nav-item">
                <a class="nav-link" href="~/ServApp/Index">Servicios y aplicaciones</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="~/ControlCambio/Repositorio">Repositorio</a>
            </li>
        </ul>
        <ul class="navbar-nav ml-md-auto">
            <li>
                <a class="nav-link" href="#">@ViewData["NavNombre"]</a>
            </li>
            <li class="nav-item dropdown mr-3" style="display: grid">
                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <span class="icon-bell"></span>
                </a>
                <span class="not-numero badge badge-pill badge-danger">@ViewBag.Notificaciones.Count</span>
                <div class="dropdown-menu bg-dark not-contenedor" aria-labelledby="navbarDropdownMenuLink">
                    @foreach (var n in ViewBag.Notificaciones as IEnumerable<SistemaCC.Models.Notificaciones>)
                    {
                        <div class="link-dark">
                            <span class="bold">@ViewBag.Notificaciones_claves[ViewBag.Notificaciones.IndexOf(n)]</span>
                            <a class="dropdown-item link-dark fancybox fancybox.ajax" href="~/ControlCambio/Notificar?id=@n.Id_No">
                                Ver
                            </a>
                        </div>
                    }
                    @if (ViewBag.Notificaciones == null || ViewBag.Notificaciones.Count == 0)
                    {
                        <div class="link-dark">
                            <span>No hay notificaciones</span>
                        </div>
                    }
                </div>
            </li>
            <li class="nav-item mr-3">
                <a class="nav-link fancybox fancybox.ajax" href="~/ControlCambio/Calendario?id=1"><span class="icon-calendar"></span></a>
            </li>
            <li class="nav-item mr-3">
                <a class="nav-link" href="~/ControlCambio/Notificar?id=0"><span class="icon-log-out"></span></a>
            </li>
        </ul>
    </div>
</nav>
